<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/back3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    tools:context=".ChooseOne">

    <TextView
        android:id="@+id/Textview_Chooseone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login as :"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginTop="150dp"
        android:textColor="@color/Red"
        />

    <Button
        android:id="@+id/Admin_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin"
        android:layout_below="@+id/Textview_Chooseone"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonblue"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />
    <Button
        android:id="@+id/User_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User"
        android:layout_below="@+id/Admin_btn"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonblue"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />
    <Button
        android:id="@+id/Dilivery_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dilivery Person"
        android:layout_below="@+id/User_btn"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonblue"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />





</RelativeLayout>